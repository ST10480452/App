<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black"
    android:padding="24dp">

    <TextView
        android:id="@+id/txtCalGoal"
        android:text="Daily target: 1400 calories"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnChangeCalGoal"
        android:text="Change Goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnWithin"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text="✓ Stayed within" />

        <Button
            android:id="@+id/btnOver"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text="✗ Went over" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtWeeklyCount"
        android:text="0/7 days on target"
        android:textColor="@color/gray"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
